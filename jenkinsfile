pipeline {
    agent any  // Can run on any available Jenkins agent

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', // Adjust branch name if needed
                   credentialsId: 'slitzfringe',
                   url: 'https://github.com/slitzfringe/Devops_Dhaneesh'
            }
        }
        stage('Build Docker Image (Optional)') {
            when {
                expression { // Run only if Docker Hub is not used
                    !env.REGISTRY_URL // Check for environment variable
                }
            }
            steps {
                docker.build(
                    imageName: 'links:latest', // Adjust image name
                    dockerfilePath: 'Dockerfile'
                )
            }
        }
